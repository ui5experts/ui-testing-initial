    {
      "label": "NotFound",
      "url": "http://localhost:8000/test/flpSandboxMockServer.html?serverDelay=0&sap-ui-language=en#UITesting-display&/Travels/666",
      "delay": 500
    },
    {
      "label": "Empty",
      "url": "http://localhost:8000/test/flpSandboxMockServer.html?serverDelay=0&sap-ui-language=en#UITesting-display&/Travels",
      "delay": 500
    }
